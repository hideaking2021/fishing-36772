<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "プロフィール"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">アングラー 名</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">メイン ロッド</th>
            <td class="table__col2"><%= @user.rod %></td>
          </tr>
          <tr>
            <th class="table__col1">メイン リール</th>
            <td class="table__col2"><%= @user.reel %></td>
          </tr>
          <tr>
            <th class="table__col1">メイン ルアー（餌）</th>
            <td class="table__col2"><%= @user.feed %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんの釣果"%>
      </h2>
      <div class="user__card">
        <%= render partial: "fishings/fishing", collection: @user.fishings %>
      </div>
    </div>
  </div>
</div>