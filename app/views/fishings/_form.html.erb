<%= form_with model: @fishing, local: true do |f|%>
  <div class="field">
    <%= f.label :image, "魚の画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>
  
  <div class="field">
    <%= f.label :title, "魚の名称" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "釣った場所" %><br />
    <%= f.text_area :catch_copy, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <%= f.label :concept, "釣った餌（ルアー）" %><br />
    <%= f.text_area :concept, class: :form__text, id:"prototype_concept" %>
  </div>


  <div class="actions">
    <%= f.submit "更新", class: :form__btn  %>
  </div>
<% end %>
